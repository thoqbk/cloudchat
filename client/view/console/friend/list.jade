div(ng-show="contentBox.code == 'friend'" ng-controller="UserController")
    table(style="width:100%" border="1" ng-show="mode == 'list'")
        tr
            th
                |id
            th
                |username
            th
                |full name
            th
        tr(ng-repeat="friend in friends")
            td
                |{{friend.id}}
            td
                img(ng-src="/image/online_bullet.png" ng-show="friend.onlineStatus == 'online'")
                img(ng-src="/image/offline_bullet.png" ng-show="friend.onlineStatus == 'offline'")
                a(class="command-link" ng-click="openUserDetail(friend)")
                    |{{friend.username}}
            td
                |{{friend.fullName}}
            td
                a(class="command-link" ng-click="$emit('cloudchat.run','$cw '+friend.username)")
                    |chat
    div(ng-show="mode == 'profile'")
        include ../profile.jade